<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rodrigo.prado.PlanetControl">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="textName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Eixo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Spinner fx:id="spnAxis" GridPane.rowIndex="1" GridPane.columnIndex="1"
                     max="359" min="0" amountToStepBy="0.1" editable="true"/>
            <Label text="Tempo de translação (dias terrestres):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="textOrbitalPeriod" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            <Label text="Tempo de rotação (dias terrestres):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="textRotationPeriod" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            <Label text="Número de satélites naturais:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <TextField fx:id="textQtySatellites" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
