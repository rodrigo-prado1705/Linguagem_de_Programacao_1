<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.rodrigo.prado.PlaceControl">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="textName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Label text="Descrição:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="areaDesc" GridPane.rowIndex="1" GridPane.columnIndex="1" wrapText="true"/>
        </GridPane>
    </content>
</DialogPane>
